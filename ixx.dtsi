#include <dt-bindings/zmk/matrix_transform.h>

/ {
    chosen {
        zmk,kscan = &kscan0;
        zmk,matrix_transform = &default_transform;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
// | SW1  | SW2  | SW3  | SW4  | SW5  |   | SW1  | SW2  | SW3  | SW4  | SW5  |
// | SW6  | SW7  | SW8  | SW9  | SW10 |   | SW6  | SW7  | SW8  | SW9  | SW10 |
// | SW11 | SW12 | SW13 | SW14 | SW15 |   | SW11 | SW12 | SW13 | SW14 | SW15 |
// | SW16 | SW17 | SW18 | SW19 | SW20 |   | SW16 | SW17 | SW18 | SW19 | SW20 |
        map = <
        RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4)   RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) 
        RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4)   RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) 
        RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4)   RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) 
        RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4)   RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) 
        >;
    };

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";

        diode-direction = "col2row";
        row-gpios
            = <&pro_micro 11 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 12 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 14 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            , <&pro_micro 13 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
            ;

    };
};
